Private Sub SetSeriesData( _
        ByVal ch As Chart, _
        ByVal seriesIndex As Long, _
        ByVal ws As Worksheet, _
        ByVal xCol As Long, _
        ByVal yCol As Long, _
        ByVal startRow As Long, _
        ByVal endRow As Long, _
        Optional ByVal lineColor As Long = -1, _
        Optional ByVal dashStyle As MsoLineDashStyle = msoLineSolid _
    )

    With ch.FullSeriesCollection(seriesIndex)
        
        .XValues = ws.Range(ws.Cells(startRow, xCol), ws.Cells(endRow, xCol))
        .Values = ws.Range(ws.Cells(startRow, yCol), ws.Cells(endRow, yCol))
        
        If lineColor <> -1 Then
            .Format.Line.ForeColor.RGB = lineColor
        End If
        
        .Format.Line.DashStyle = dashStyle
        
    End With

End Sub
