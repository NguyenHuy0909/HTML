Sub ImportTxtSplit16()
    Dim filePath As String
    Dim fso As Object, ts As Object
    Dim line As String
    Dim i As Long, col As Long
    Dim ws As Worksheet
    
    ' chọn file txt
    filePath = Application.GetOpenFilename("Text Files (*.txt),*.txt", , "Chọn file txt cần import")
    If filePath = "False" Then Exit Sub
    
    Set fso = CreateObject("Scripting.FileSystemObject")
    Set ts = fso.OpenTextFile(filePath, 1)
    Set ws = ActiveSheet
    
    i = 1
    Do Until ts.AtEndOfStream
        line = ts.ReadLine
        col = 1
        Do While Len(line) > 0
            ws.Cells(i, col).Value = Left(line, 16)
            line = Mid(line, 17)
            col = col + 1
        Loop
        i = i + 1
    Loop
    
    ts.Close
    MsgBox "Đã import xong!", vbInformation
End Sub
