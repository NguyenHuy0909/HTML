Sub ImportTxtSplit16()
    Dim filePath As String
    Dim fso As Object, ts As Object
    Dim line As String
    Dim i As Long, col As Long
    Dim ws As Worksheet
    
    ' ch·ªçn file txt
    filePath = Application.GetOpenFilename("Text Files (*.txt),*.txt", , "Ch·ªçn file txt c·∫ßn import")
    If filePath = "False" Then Exit Sub
    
    Set fso = CreateObject("Scripting.FileSystemObject")
    Set ts = fso.OpenTextFile(filePath, 1)
    Set ws = ActiveSheet
    
    i = 1
    Dim lineCount As Long
lineCount = 0

Do Until ts.AtEndOfStream
    line = ts.ReadLine
    lineCount = lineCount + 1
    
    ' üî∏ Ch·ªâ b·∫Øt ƒë·∫ßu x·ª≠ l√Ω t·ª´ d√≤ng th·ª© 24 trong file txt
    If lineCount >= 24 Then
        col = 1
        Do While Len(line) > 0
            ws.Cells(i, col).Value = Left(line, 16)
            line = Mid(line, 17)
            col = col + 1
        Loop
        i = i + 1
    End If
Loop
    
    ts.Close
    MsgBox "ƒê√£ import xong!", vbInformation
End Sub
