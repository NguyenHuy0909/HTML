Public Function GetLineStyle(ByVal styleText As String) As MsoLineDashStyle

    Select Case LCase(Trim(styleText))
    
        Case "linesolid"
            GetLineStyle = msoLineSolid
            
        Case "linedash"
            GetLineStyle = msoLineDash
            
        Case "linedot"
            GetLineStyle = msoLineDot
            
        Case "linedashdot"
            GetLineStyle = msoLineDashDot
            
        Case "linedashdotdot"
            GetLineStyle = msoLineDashDotDot
            
        Case Else
            GetLineStyle = msoLineSolid   ' default náº¿u sai
        
    End Select

End Function
