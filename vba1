Function FindColumnsByText(ws As Worksheet, keyword As String) As Variant
    Dim i As Long, lastCol As Long
    Dim tmp() As Long, count As Long
    
    lastCol = ws.Cells(1, ws.Columns.Count).End(xlToLeft).Column
    
    For i = 1 To lastCol
        If InStr(1, ws.Cells(1, i).Value, keyword, vbTextCompare) > 0 Then
            count = count + 1
            ReDim Preserve tmp(1 To count)
            tmp(count) = i
        End If
    Next i
    
    If count > 0 Then
        FindColumnsByText = tmp
    Else
        FindColumnsByText = Array()
    End If
End Function
